<div class="medium-12 columns">
  <h1>Pick drum type</h1>

  <%= form_tag(controller: "wizard", action: "weight") do %>
    <%= #collection_select(:wizard,  :drum_type, @drums, :id, :description) 
  %>
    <table width=100%>
      <thead>
        <tr>
          <th width=5%>&nbsp;</th>
          <th width=20%>Diameter</th>
          <th width=20%>Height</th>
          <th width=50%>Description</th>
        </tr>
      </thead>

      <tbody>
        <% @drums.each do |d| %>
        <tr>
          <td style="text-align: center"><%= radio_button_tag "wizard[drum_type]", d.id.to_s, required: 'required' %></td>
          <td><%= d.diameter %></td>
          <td><%= d.width %></td>
          <td><%= d.description %></td>

        </tr>
        <% end %>

      </tbody>
  </table>
  <br>
    <%= hidden_field_tag("wizard[cable_type]", @query["cable_type"]) %>

  <%= button_tag "Next >" %>


  <% end %>
</div>